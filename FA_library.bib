@Article{Liu2017,
  Title                    = {{Mapping the Milky Way with LAMOST I: Method and overview}},
  Author                   = {{Liu}, C. and {Xu}, Y. and {Wan}, J.-C. and {Wang}, H.-F. and {Carlin}, J.~L. and {Deng}, L.-C. and {Newberg}, H.~J. and {Cao}, Z. and {Hou}, Y. and {Wang}, Y. and {Zhang}, Y.},
