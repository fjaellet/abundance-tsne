@Article{Casagrande2014,
  Title                    = {{Towards stellar effective temperatures and diameters at 1 per cent accuracy for future surveys}},
  Author                   = {{Casagrande}, L. and {Portinari}, L. and {Glass}, I.~S. and {Laney}, D. and {Silva Aguirre}, V. and {Datson}, J. and {Andersen}, J. and {Nordstr{\"o}m}, B. and {Holmberg}, J. and {Flynn}, C. and {Asplund}, M. },
