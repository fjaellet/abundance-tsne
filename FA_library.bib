@Article{Piskunov2008,
  Title                    = {{Tidal radii and masses of open clusters}},
  Author                   = {{Piskunov}, A.~E. and {Schilbach}, E. and {Kharchenko}, N.~V. and {R{\"o}ser}, S. and {Scholz}, R.-D.},
