@Article{Santiago2016,
  Title                    = {{Spectro-photometric distances to stars: A general purpose Bayesian approach}},
  Author                   = {{Santiago}, B.~X. and {Brauer}, D.~E. and {Anders}, F. and {Chiappini}, C. and {Queiroz}, A.~B. and {Girardi}, L. and {Rocha-Pinto}, H.~J. and {Balbinot}, E. and {da Costa}, L.~N. and {Maia}, M.~A.~G. and {Schultheis}, M. and {Steinmetz}, M. and {Miglio}, A. and {Montalb{\'a}n}, J. and {Schneider}, D.~P. and {Beers}, T.~C. and {Frinchaboy}, P.~M. and {Lee}, Y.~S. and {Zasowski}, G.},
