  Eprint                   = {1212.1540},
  File                     = {arXiv v1:Ness2013-eprintv1.pdf:PDF},
  Keywords                 = {stars: abundances, Galaxy: abundances, Galaxy: bulge, Galaxy: centre, Galaxy: evolution, Galaxy: formation},
