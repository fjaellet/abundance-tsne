  Author                   = {{Zwitter}, T. and {Siebert}, A. and {Munari}, U. and {Freeman}, K.~C. and {Siviero}, A. and {Watson}, F.~G. and {Fulbright}, J.~P. and {Wyse}, R.~F.~G. and {Campbell}, R. and {Seabroke}, G.~M. and {Williams}, M. and {Steinmetz}, M. and {Bienaym{\'e}}, O. and {Gilmore}, G. and {Grebel}, E.~K. and {Helmi}, A. and {Navarro}, J.~F. and {Anguiano}, B. and {Boeche}, C. and {Burton}, D. and {Cass}, P. and {Dawe}, J. and {Fiegert}, K. and {Hartley}, M. and {Russell}, K. and {Veltz}, L. and {Bailin}, J. and {Binney}, J. and {Bland-Hawthorn}, J. and {Brown}, A. and {Dehnen}, W. and {Evans}, N.~W. and {Re Fiorentin}, P. and {Fiorucci}, M. and {Gerhard}, O. and {Gibson}, B. and {Kelz}, A. and {Kujken}, K. and {Matijevi{\v c}}, G. and {Minchev}, I. and {Parker}, Q.~A. and {Pe{\~n}arrubia}, J. and {Quillen}, A. and {Read}, M.~A. and {Reid}, W. and {Roeser}, S. and {Ruchti}, G. and {Scholz}, R.-D. and {Smith}, M.~C. and {Sordo}, R. and {Tolstoi}, E. and {Tomasella}, L. and {Vidrih}, S. and {Wylie-de Boer}, E.},
  Journal                  = {\aj},
