@Article{Valle2015b,
  Title                    = {{Grid-based estimates of stellar ages in binary systems. SCEPtER: Stellar CharactEristics Pisa Estimation gRid}},
  Author                   = {{Valle}, G. and {Dell'Omodarme}, M. and {Prada Moroni}, P.~G. and {Degl'Innocenti}, S.},
