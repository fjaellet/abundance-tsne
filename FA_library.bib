@Article{Jing2016,
  Title                    = {{Kinematics of the Galactic disc from a LAMOST dwarf sample}},
  Author                   = {{Jing}, Y. and {Du}, C. and {Gu}, J. and {Jia}, Y. and {Peng}, X. and {Chen}, Y. and {Wu}, Z. and {Ma}, J. and {Zhou}, X. and {Cao}, Z. and {Hou}, Y. and {Wang}, Y. and {Zhang}, Y.},
