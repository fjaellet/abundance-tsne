@Article{Scannapieco2011,
  Title                    = {{Formation history, structure and dynamics of discs and spheroids in simulated Milky Way mass galaxies}},
  Author                   = {{Scannapieco}, C. and {White}, S.~D.~M. and {Springel}, V. and {Tissera}, P.~B.},
