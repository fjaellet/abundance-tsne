  Adsurl                   = {http://ads.ari.uni-heidelberg.de/abs/2015HiA....16..320L},
  Doi                      = {10.1017/S1743921314005845},
  Keywords                 = {galaxies: evolution, galaxies: structure,},
  Owner                    = {friedel},
  Timestamp                = {2015.10.05}
}

@Article{Lewis2002,
