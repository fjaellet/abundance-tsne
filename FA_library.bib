  Adsurl                   = {http://ads.ari.uni-heidelberg.de/abs/2017arXiv170708223H},
  Archiveprefix            = {arXiv},
  Eprint                   = {1707.08223},
  File                     = {arXiv v1:Handberg2017-eprintv1.pdf:PDF},
  Keywords                 = {Astrophysics - Solar and Stellar Astrophysics},
  Owner                    = {friedel},
  Primaryclass             = {astro-ph.SR},
  Timestamp                = {2017.07.27}
}

