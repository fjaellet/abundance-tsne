@Article{Tsujimoto2017,
  Title                    = {{Chemical evolution of 244Pu in the solar vicinity and its implication for the properties of r-process production}},
  Author                   = {{Tsujimoto}, T. and {Yokoyama}, T. and {Bekki}, K.},
