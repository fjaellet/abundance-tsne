@Article{Schneider2016,
  Title                    = {{BONNSAI: correlated stellar observables in Bayesian methods}},
  Author                   = {{Schneider}, F.~R.~N. and {Castro}, N. and {Fossati}, L. and {Langer}, N. and {de Koter}, A.},
  Journal                  = {ArXiv e-prints},
