  Eprint                   = {1410.1745},
  File                     = {arXiv v1:Tang2014-eprintv1.pdf:PDF},
  Keywords                 = {stars: evolution, Hertzsprung-Russell and colour-magnitude diagrams, stars: interiors, stars: massive},
  Owner                    = {friedel},
  Primaryclass             = {astro-ph.SR},
  Timestamp                = {2015.08.20}
}

