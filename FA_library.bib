@Article{Casey2016a,
  Title                    = {{The Cannon 2: A data-driven model of stellar spectra for detailed chemical abundance analyses}},
  Author                   = {{Casey}, A.~R. and {Hogg}, D.~W. and {Ness}, M. and {Rix}, H.-W. and {Ho}, A.~Q. and {Gilmore}, G.},
