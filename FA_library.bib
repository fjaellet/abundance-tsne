  Author                   = {{Carlin}, J.~L. and {Liu}, C. and {Newberg}, H.~J. and {Beers}, T.~C. and {Chen}, L. and {Deng}, L. and {Guhathakurta}, P. and {Hou}, J. and {Hou}, Y. and {L{\'e}pine}, S. and {Li}, G. and {Luo}, A.-L. and {Smith}, M.~C. and {Wu}, Y. and {Yang}, M. and {Yanny}, B. and {Zhang}, H. and {Zheng}, Z.},
