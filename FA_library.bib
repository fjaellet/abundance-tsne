@Article{Robin2014,
  Title                    = {{Constraining the thick disc formation scenario of the Milky Way}},
  Author                   = {{Robin}, A.~C. and {Reyl{\'e}}, C. and {Fliri}, J. and {Czekaj}, M. and {Robert}, C.~P. and {Martins}, A.~M.~M.},
