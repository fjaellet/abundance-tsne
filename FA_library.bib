  Adsurl                   = {http://cdsads.u-strasbg.fr/abs/2004A%26A...413..159A},
  Doi                      = {10.1051/0004-6361:20031528},
  Keywords                 = {stars: abundances, Galaxy: abundances, Galaxy: evolution, stars: variables: cepheids},
  Owner                    = {friedel},
  Timestamp                = {2016.05.02}
}

@Article{Antoja2012,
