@Article{Ambikasaran2014,
  Title                    = {{Fast Direct Methods for Gaussian Processes}},
  Author                   = {{Ambikasaran}, S. and {Foreman-Mackey}, D. and {Greengard}, L. and {Hogg}, D.~W. and {O'Neil}, M.},
