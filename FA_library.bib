@Article{Antoja2015,
  Title                    = {{The Imprints of the Galactic Bar on the Thick Disk with Rave}},
  Author                   = {{Antoja}, T. and {Monari}, G. and {Helmi}, A. and {Bienaym{\'e}}, O. and {Bland-Hawthorn}, J. and {Famaey}, B. and {Gibson}, B.~K. and {Grebel}, E.~K. and {Kordopatis}, G. and {Munari}, U. and {Navarro}, J. and {Parker}, Q. and {Reid}, W.~A. and {Seabroke}, G. and {Steinmetz}, M. and {Zwitter}, T.},
