@Article{Zhao2012,
  Title                    = {{LAMOST spectral survey - An overview}},
  Author                   = {{Zhao}, G. and {Zhao}, Y.-H. and {Chu}, Y.-Q. and {Jing}, Y.-P. and {Deng}, L.-C.},
