@Article{Fernandez-Trincado2015,
  Title                    = {{RAVE stars tidally stripped or ejected from the {$\omega$} Centauri globular cluster}},
  Author                   = {{Fern{\'a}ndez-Trincado}, J.~G. and {Robin}, A.~C. and {Vieira}, K. and {Moreno}, E. and {Bienaym{\'e}}, O. and {Reyl{\'e}}, C. and {Valenzuela}, O. and {Pichardo}, B. and {Robles-Valdez}, F. and {Martins}, A.~M.~M.},
  Journal                  = {\aap},
  Year                     = {2015},

  Month                    = nov,
  Pages                    = {A76},
  Volume                   = {583},

  Abstract                 = {{Using six-dimensional phase-space information from the Fourth Data
release of the RAdial Velocity Experiment (RAVE) over the range of
Galactic longitude 240{\deg}$\lt$l$\lt$ 360{\deg} and V$_{LSR}$$\lt$
-239 km s$^{-1}$, we computed orbits for 329 RAVE stars that were
originally selected as chemically and kinematically related to {$\omega$}
Centauri. The orbits were integrated in a Milky-Way-like axisymmetric
Galactic potential, ignoring the effects of the dynamical evolution of
{$\omega$} Centauri due to the tidal effects of the Galaxy disk on the
cluster along time. We also ignored secular changes in the Milky Way
potential over time. In a Monte Carlo scheme, and under the assumption
that the stars may have been ejected with velocities greater than the
escape velocity (V$_{rel}$$\gt$V$_{esc,0}$) from the cluster,
we identified 15 stars as having close encounters with {$\omega$} Centauri:
(i) 8 stars with relative velocities V$_{rel}$$\lt$ 200 km
s$^{-1}$ may have been ejected \~{}200 Myr ago from {$\omega$} Centauri;
(ii) another group of 7 stars were identified with high relative
velocity V$_{rel}$$\gt$ 200 km s$^{-1}$ during close
encounters, and it seems unlikely that they were ejected from {$\omega$}
Centauri. We also confirm the link between J131340.4-484714 as a
potential member of {$\omega$} Centauri, and probably ejected \~{}2.0 Myr ago,
with a relative velocity V$_{rel}$ \~{} 80 km s$^{-1}$.

