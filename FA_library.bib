  Author                   = {{Lagarde}, N. and {Miglio}, A. and {Eggenberger}, P. and {Morel}, T. and {Montalb{\'a}n}, J. and {Mosser}, B. and {Rodrigues}, T.~S. and {Girardi}, L. and {Rainer}, M. and {Poretti}, E. and {Barban}, C. and {Hekker}, S. and {Kallinger}, T. and {Valentini}, M. and {Carrier}, F. and {Hareter}, M. and {Mantegazza}, L. and {Elsworth}, Y. and {Michel}, E. and {Baglin}, A.},
