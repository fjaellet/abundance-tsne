@Article{Boissier2003,
  Title                    = {{The star formation rate in disc galaxies: thresholds and dependence on gas amount}},
  Author                   = {{Boissier}, S. and {Prantzos}, N. and {Boselli}, A. and {Gavazzi}, G. },
