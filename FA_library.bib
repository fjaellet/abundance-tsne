@Article{Chiappini2015c,
  Title                    = {{New Observational Constraints to Milky Way Chemodynamical Models}},
  Author                   = {{Chiappini}, C. and {Minchev}, I. and {Anders}, F. and {Brauer}, D. and {Boeche}, C. and {Martig}, M.},
