  Author                   = {{Antoja}, T. and {Helmi}, A. and {Bienayme}, O. and {Bland-Hawthorn}, J. and {Famaey}, B. and {Freeman}, K. and {Gibson}, B.~K. and {Gilmore}, G. and {Grebel}, E.~K. and {Minchev}, I. and {Munari}, U. and {Navarro}, J. and {Parker}, Q. and {Reid}, W. and {Seabroke}, G.~M. and {Siebert}, A. and {Siviero}, A. and {Steinmetz}, M. and {Williams}, M. and {Wyse}, R. and {Zwitter}, T.},
