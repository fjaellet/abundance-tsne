@Article{Romero-Gomez2015,
  Title                    = {{The analysis of realistic stellar Gaia mock catalogues - I. Red clump stars as tracers of the central bar}},
  Author                   = {{Romero-G{\'o}mez}, M. and {Figueras}, F. and {Antoja}, T. and {Abedi}, H. and {Aguilar}, L.},
