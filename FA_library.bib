  Author                   = {{Mosser}, B. and {Goupil}, M.~J. and {Belkacem}, K. and {Marques}, J.~P. and {Beck}, P.~G. and {Bloemen}, S. and {De Ridder}, J. and {Barban}, C. and {Deheuvels}, S. and {Elsworth}, Y. and {Hekker}, S. and {Kallinger}, T. and {Ouazzani}, R.~M. and {Pinsonneault}, M. and {Samadi}, R. and {Stello}, D. and {Garc{\'{\i}}a}, R.~A. and {Klaus}, T.~C. and {Li}, J. and {Mathur}, S. and {Morris}, R.~L.},
  Journal                  = {\aap},
