  Author                   = {{Casagrande}, L. and {Silva Aguirre}, V. and {Schlesinger}, K.~J. and {Stello}, D. and {Huber}, D. and {Serenelli}, A.~M. and {Sch{\"o}nrich}, R. and {Cassisi}, S. and {Pietrinferni}, A. and {Hodgkin}, S. and {Milone}, A.~P. and {Feltzing}, S. and {Asplund}, M.},
