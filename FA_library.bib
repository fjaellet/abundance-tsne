  File                     = {Published version:Fernandez-Trincado2016.pdf:PDF},
  Keywords                 = {globular clusters: general, stars: abundances, stars: Population II},
  Owner                    = {friedel},
  Timestamp                = {2017.08.21}
}

@InProceedings{Fernandez-Trincado2015b,
  Title                    = {{Mapping the inner stellar halo of the Milky Way from 2MASS and SDSS-III/APOGEE survey}},
  Author                   = {{Fern{\'a}ndez-Trincado}, J.~G. and {Robin}, A.~C. and {Reyl{\'e}}, C. },
