@Article{Chiappini2011a,
  Title                    = {{Imprints of fast-rotating massive stars in the Galactic Bulge}},
  Author                   = {{Chiappini}, C. and {Frischknecht}, U. and {Meynet}, G. and {Hirschi}, R. and {Barbuy}, B. and {Pignatari}, M. and {Decressin}, T. and {Maeder}, A.},
