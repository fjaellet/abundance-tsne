  Timestamp                = {2015.08.13}
}

@Article{Lagarde2012,
  Title                    = {{Thermohaline instability and rotation-induced mixing. III. Grid of stellar models and asymptotic asteroseismic quantities from the pre-main sequence up to the AGB for low- and intermediate-mass stars of various metallicities}},
