@Article{Barbuy2014,
  Title                    = {{High-resolution abundance analysis of red giants in the globular cluster NGC 6522}},
  Author                   = {{Barbuy}, B. and {Chiappini}, C. and {Cantelli}, E. and {Depagne}, E. and {Pignatari}, M. and {Hirschi}, R. and {Cescutti}, G. and {Ortolani}, S. and {Hill}, V. and {Zoccali}, M. and {Minniti}, D. and {Trevisan}, M. and {Bica}, E. and {G{\'o}mez}, A.},
