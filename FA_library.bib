  Doi                      = {10.3847/0004-637X/832/2/137},
  Eid                      = {137},
  Eprint                   = {1609.03424},
  File                     = {Published version:Astraatmadja2016a.pdf:PDF},
  Keywords                 = {methods: data analysis, methods: statistical, parallaxes, stars: distances, stars: fundamental parameters, surveys},
  Owner                    = {friedel},
