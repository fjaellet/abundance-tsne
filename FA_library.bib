  Author                   = {{Recio-Blanco}, A. and {de Laverny}, P. and {Kordopatis}, G. and {Helmi}, A. and {Hill}, V. and {Gilmore}, G. and {Wyse}, R. and {Adibekyan}, V. and {Randich}, S. and {Asplund}, M. and {Feltzing}, S. and {Jeffries}, R. and {Micela}, G. and {Vallenari}, A. and {Alfaro}, E. and {Allende Prieto}, C. and {Bensby}, T. and {Bragaglia}, A. and {Flaccomio}, E. and {Koposov}, S.~E. and {Korn}, A. and {Lanzafame}, A. and {Pancino}, E. and {Smiljanic}, R. and {Jackson}, R. and {Lewis}, J. and {Magrini}, L. and {Morbidelli}, L. and {Prisinzano}, L. and {Sacco}, G. and {Worley}, C.~C. and {Hourihane}, A. and {Bergemann}, M. and {Costado}, M.~T. and {Heiter}, U. and {Joffre}, P. and {Lardo}, C. and {Lind}, K. and {Maiorca}, E.},
  Journal                  = {\aap},
