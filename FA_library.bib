@Article{Wojno2016,
  Title                    = {{Chemical separation of disc components using RAVE}},
  Author                   = {{Wojno}, J. and {Kordopatis}, G. and {Steinmetz}, M. and {McMillan}, P. and {Matijevi{\v c}}, G. and {Binney}, J. and {Wyse}, R.~F.~G. and {Boeche}, C. and {Just}, A. and {Grebel}, E.~K. and {Siebert}, A. and {Bienaym{\'e}}, O. and {Gibson}, B.~K. and {Zwitter}, T. and {Bland-Hawthorn}, J. and {Navarro}, J.~F. and {Parker}, Q.~A. and {Reid}, W. and {Seabroke}, G. and {Watson}, F.},
