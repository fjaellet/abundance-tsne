  Author                   = {{Miglio}, A. and {Chaplin}, W.~J. and {Brogaard}, K. and {Lund}, M.~N. and {Mosser}, B. and {Davies}, G.~R. and {Handberg}, R. and {Milone}, A.~P. and {Marino}, A.~F. and {Bossini}, D. and {Elsworth}, Y.~P. and {Grundahl}, F. and {Arentoft}, T. and {Bedin}, L.~R. and {Campante}, T.~L. and {Jessen-Hansen}, J. and {Jones}, C.~D. and {Kuszlewicz}, J.~S. and {Malavolta}, L. and {Nascimbeni}, V. and {Sandquist}, E.~L.},
