@Article{Valentini2016,
  Title                    = {{The CoRoT-GES Collaboration: Improving red giants spectroscopic surface gravitity and abundances with asteroseismology}},
  Author                   = {{Valentini}, M. and {Chiappini}, C. and {Miglio}, A. and {Montalb{\'a}n}, J. and {Rodrigues}, T. and {Mosser}, B. and {Anders}, F. and {the CoRoT RG Group} and {GES Consortium}, t.},
  Journal                  = {Astronomische Nachrichten},
