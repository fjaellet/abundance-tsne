@Article{Ness2015,
  Title                    = {{The Cannon: A data-driven approach to Stellar Label Determination}},
  Author                   = {{Ness}, M. and {Hogg}, D.~W. and {Rix}, H.-W. and {Ho}, A.~Y.~Q. and {Zasowski}, G.},
