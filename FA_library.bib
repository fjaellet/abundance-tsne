@Article{Belkacem2012,
  Title                    = {{Damping rates of solar-like oscillations across the HR diagram. Theoretical calculations confronted to CoRoT and Kepler observations}},
  Author                   = {{Belkacem}, K. and {Dupret}, M.~A. and {Baudin}, F. and {Appourchaux}, T. and {Marques}, J.~P. and {Samadi}, R.},
